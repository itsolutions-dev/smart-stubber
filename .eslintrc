{
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "linebreak-style": 0,
    "quotes": [
      2,
      "single"
    ],
    "strict": [
      2,
      "never"
    ]
  },
  "plugins": [
    "flowtype",
    "react"
  ],
  "globals": {
    "describe": false,
    "test": false,
    "expect": false,
    "jest": false,
    "before": false,
    "beforeEach": false,
    "after": false,
    "afterEach": false
  },
  "extends": [
    "plugin:flowtype/recommended",
    "prettier",
    "prettier/flowtype",
    "airbnb"
  ],
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  }
}